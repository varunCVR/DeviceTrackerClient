<?xml version="1.0" encoding="utf-8"?>
<Configuration>
	<Logging>
		<LogDirectory>DeviceTrackerLogs</LogDirectory>
		<MaxLogSizeMB>100</MaxLogSizeMB>
		<RetentionDays>90</RetentionDays>
		<SeparateLogFiles>true</SeparateLogFiles>
		<LogFiles>
			<SystemEvents>system_events.json</SystemEvents>
			<AppUsage>app_usage.json</AppUsage>
			<Sessions>session_timeline.json</Sessions>
			<Errors>error_log.json</Errors>
		</LogFiles>
	</Logging>

	<Monitoring>
		<CheckInterval>1000</CheckInterval>
		<!-- milliseconds -->
		<TrackSystemEvents>true</TrackSystemEvents>
		<TrackApplicationUsage>true</TrackApplicationUsage>
		<TrackNetworkActivity>true</TrackNetworkActivity>
		<TrackFileChanges>false</TrackFileChanges>
	</Monitoring>

	<Persistence>
		<RunAsService>true</RunAsService>
		<AutoStart>true</AutoStart>
		<SurviveReboot>true</SurviveReboot>
		<LogRotation>true</LogRotation>
	</Persistence>
</Configuration>